@page "{id}"
@using ConsoleCafe.WebSite.Services
@using Microsoft.AspNetCore.Components.Web
@inject JsonFileProductService ProductService
@model DownloadModel
@{
    ViewData["Title"] = "Download Game";
}

<div class="content-bgcolor">
    <h1 class="title" id="productTitle">@Model.Product.Name</h1>
    <img class="card-img" src='@Model.Product.Image' alt='Image for @Model.Product.Title'>

    <!-- Create a table to display every property of the Product class-->
    <table class="table table-bordered table-striped content-container">
        <thead>
            <tr>
                <th>Property</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>

            <!-- Displays only the properties selected -Ravi. -->
            @foreach (var property in Model.Product.GetType().GetProperties()
            .Where(p => p.Name == "Maker" || p.Name == "Description" || p.Name == "ProductType"))
            {
                <tr>
                    <td>@property.Name</td>
                    <!-- if the property is the Rating property, display the average of the ratings, otherwise display the value of the property-->
                    <!--Call the GetAverageRating in the ReadModel class to get the average of the ratings-->
                    <td>@(property.Name == "Ratings" ? Model.GetAverageRating(Model.Product.Id) : property.GetValue(Model.Product))</td>

                </tr>
            }
        </tbody>

    </table>

</div>

<br />
<br />

<div class="row">
    <a href="#Download_Popup" role="button" id="ShowPopup" data-toggle="modal" class="btn btn-primary">Download</a>
</div>

 <div class="modal fade" id="Download_Popup" tabindex="-1" role="dialog" aria-labelledby="productTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="productTitle">Downloading... @Model.Product.Name</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="card">
            <img class="card-img" src='@Model.Product.Image' alt='Image for @Model.Product.Title'>
          </div>
        </div>
      </div>
    </div>
</div>




